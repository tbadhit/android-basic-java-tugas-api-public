<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img_game"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img_game"
            android:layout_margin="5dp"
            android:text="Judul Blog"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_judul"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Rating" />

        <TextView
            android:id="@+id/item_tv_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_judul"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Tanggal Release" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>